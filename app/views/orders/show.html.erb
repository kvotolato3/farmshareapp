<div class = "container">
  <h3>Review order</h3>


  <div class="panel panel-warning">
    <div class="panel-heading">
      <h2 class="panel-title">Shareholder Info:</h2>
    </div>
    <div class="panel-body">
      <%=@order.full_name%><br>
      <%=@order.address_1%><br>
      <%=@order.city_st_zip%><br>
      <%=@order.phone%><br>
      <%=@order.email%><br>
    </div>
  </div>

  <div class="panel panel-warning">
    <div class="panel-heading">
      <h2 class="panel-title">Share Options:</h2>
    </div>
    <table class="table" id="review-table">
      <thead>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price per</th>
      <th>Amount</th>
      </thead>
      <tbody>
      <%@order_lines.each do |order_line|%>
        <tr>
        <td><%=order_line.share_name%></td>
        <td>x <%=order_line.quantity%></td>
        <td><%=number_to_currency(order_line.price)%></td>
        <td><%=number_to_currency(order_line.ext_amt)%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="panel-footer panel-warning">
      <div class="text-right">
        Subtotal: <%=number_to_currency(@order.subtotal)%>
      </div>
    </div>
  </div>
  <div class="panel panel-warning">
    <div class="panel-heading">
      <h2 class="panel-title">Selected Payment Plan:</h2>
    </div>
    <div class="panel-body">
      <%=@order.payment_plan%>
    </div>
  </div>
  <div class="text-right">
    Amount To Pay: <%=number_to_currency(@first_pmt_amt)%>
  </div>
  <%=link_to "Edit Order", edit_order_path(@order), class: "btn btn-info"%>
</div>

<%= form_tag order_charges_path(@order) do %>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Enter Credit Card Info"
          data-amount=<%=@first_pmt_pennies%>></script>
<% end %>






