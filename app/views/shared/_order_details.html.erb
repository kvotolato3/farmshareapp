<div class="panel panel-warning">
    <div class="panel-heading">
      <h2 class="panel-title">Shareholder Info:</h2>
    </div>
    <div class="panel-body">
      <%=order.full_name%><br>
      <%=order.address_1%><br>
      <%=order.city_st_zip%><br>
      <%=order.phone%><br>
      <%=order.email%><br>
    </div>
  </div>

  <div class="panel panel-warning">
    <div class="panel-heading">
      <h2 class="panel-title">Share Options:</h2>
    </div>
    <table class="table" id="review-table">
      <thead>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price per</th>
      <th>Amount</th>
      </thead>
      <tbody>
      <%order_lines.each do |order_line|%>
        <tr>
        <td><%=order_line.share_name%></td>
        <td>x <%=order_line.quantity%></td>
        <td><%=number_to_currency(order_line.price)%></td>
        <td><%=number_to_currency(order_line.ext_amt)%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="panel-footer panel-warning">
      <div class="text-right">
        Subtotal: <%=number_to_currency(@order.subtotal)%>
      </div>
    </div>
  </div>
  <div class="panel panel-warning">
    <div class="panel-heading">
      <h2 class="panel-title">Selected Payment Plan:</h2>
    </div>
    <div class="panel-body">
      <% case order.payment_plan %>
      <% when 'full' %>
        Pay in full today
      <% when 'single' %>
        $100 today, share balance will be paid in 1 month.
      <% when 'triple' %>
        $100 today, share balance will be paid over the next 3 months.
      <% end %>
    </div>
  </div>
